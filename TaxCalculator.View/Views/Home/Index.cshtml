@model IndividualInput
@{
    ViewData["Title"] = "Home Page";
}



<form asp-action="Calculate" method="post">
    <div>
        <label for="AnnualIncome">Please enter your annual income R:</label>
        <input type="number" id="AnnualIncome" name="AnnualIncome" value="@Model.AnnualIncome" />
    </div>
    <div>
        <label asp-for="PostalCodeValue">Please select your postal code :</label>
        <select asp-for="@Model.PostalCodeValue">
            <option value="">Choose an option</option>
            <option value="7441">7441</option>
            <option value="100">A100</option>
            <option value="7000">7000</option>
            <option value="1000">1000</option>
        </select>
    </div>
    <div>
        <button type="submit">Calculate</button>
    </div>
</form>

